<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.safebaby.vtree.safebaby.MainActivity">

    <Button
        android:id="@+id/btnStartDownload"
        android:text="Start CatLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <Button
        android:id="@+id/btnDismiss"
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="46dp" />

    <Button
        android:id="@+id/button"
        android:text="Start CatLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStartDownload"
        android:layout_alignEnd="@+id/btnStartDownload"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_alignBottom="@+id/btnDismiss" />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/imgv_picnic"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/imgv"
     />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/imgv"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
